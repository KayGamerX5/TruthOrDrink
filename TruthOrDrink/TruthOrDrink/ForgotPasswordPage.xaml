<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Forgot your password?" FontSize="Header"/>
            <Entry x:Name="ForgotPasswordUserNameEntry" Placeholder="Enter username here: (Warning: Case sensitive)"/>
            <Button x:Name="GetPasswordButton" Text="Reset my password" Clicked="GetPasswordButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>