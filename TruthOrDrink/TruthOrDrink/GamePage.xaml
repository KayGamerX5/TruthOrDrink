<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GamePage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="CurrentPlayerLabel" />
            <Label x:Name="QuestionLabel" FontSize="Header"/>

            <Button x:Name="TruthButton" Text="Truth" Clicked="TruthButton_Clicked"/>
            <Button x:Name="DrinkButton" Text="Drink" Clicked="DrinkButton_Clicked"/>
            <Button x:Name="EndGameButton" Text="End the game" Clicked="EndGameButton_Clicked"/>
            <Button x:Name="ExitButton" Clicked="ExitButton_Clicked" Text="Back to menu"/>
            
            
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>