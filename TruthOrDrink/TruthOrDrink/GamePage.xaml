<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.GamePage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="PlayerOneNameLabel"/>
            <Label x:Name="PlayerTwoNameLabel"/>
            <Label x:Name="PlayerThreeNameLabel" IsVisible="False"/>
            <Label x:Name="PlayerFourNameLabel" IsVisible="False"/>

            <Button x:Name="ExitButton" Clicked="ExitButton_Clicked" Text="Back"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>