<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.MainPage"
             NavigationPage.HasBackButton="False">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Truth or Drink" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" Padding="10,50,10,50"/>
        </Frame>
        <Label Text="Welcome to Truth or Drink, Login or create an account now!" FontSize="Title" Padding="30,10,30,10"/>
        
        <Label x:Name="UserNameLabel" Text="Username:" FontSize="16" Padding="0,30,0,0"/>
        <Entry x:Name="UserName" Placeholder="Enter your username here"/>
        
        <Label Text="Password:" FontSize="16" Padding="0,10,0,0"/>
        <Entry x:Name="Password" IsPassword="True" Placeholder="Enter your password here"/>

        <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked"/>

        <Button x:Name="RegisterButton" Text="Create an account" Clicked="RegisterButton_Clicked"/>

        <Button x:Name="ForgotPasswordButton" Text="Password help" Clicked="ForgotPasswordButton_Clicked"/>

    </StackLayout>

</ContentPage>
