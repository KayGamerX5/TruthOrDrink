<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.QuestionPage">
    <ContentPage.Content>
        <StackLayout>

            <ListView x:Name="QuestionListView" ItemSelected="QuestionListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding QuestionBody}" TextColor="Black"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="AddQuestionButton" Text="Add Question" Clicked="AddQuestionButton_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>