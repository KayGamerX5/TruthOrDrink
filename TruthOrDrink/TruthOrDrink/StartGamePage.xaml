<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.StartGamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="THE START OF THE GAME WILL BE HOSTED HERE"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button x:Name="StartGameButton" Text="Start the game" VerticalOptions="End" Clicked="StartGameButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>